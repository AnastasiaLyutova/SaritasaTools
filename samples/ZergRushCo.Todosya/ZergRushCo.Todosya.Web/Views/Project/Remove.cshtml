@model ZergRushCo.Todosya.Domain.TaskContext.Entities.Project
@{
    ViewBag.Title = "Remove";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.ActiveMenu = "projects";
}

<h2>Remove</h2>

@using (Html.BeginForm("Remove", "Project", new { id = Model.Id }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <p>Are you sure you want to remove project <strong>@Model.Name</strong>?</p>

    <input type="submit" class="btn btn-default" value="Remove" />
}

@Html.ActionLink("Back to projects", "Index")
